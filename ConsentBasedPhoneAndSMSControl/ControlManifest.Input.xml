<manifest>
  <control namespace="JSB"
           constructor="ConsentBasedPhoneAndSMSControl" 
           version="0.20260214.20"
           display-name-key="ConsentBasedPhoneAndSMSControl" 
           description-key="PCF control to enable the phone call or SMS features based on the consent column value(s)" 
           control-type="virtual" > 
    <external-service-usage enabled="false" />
    <!--Phone Field-->
    <property name="phoneNumber" display-name-key="Phone Number" of-type="SingleLine.Phone" usage="bound" required="true" />
    <!--Consent Fields-->
    <property name="doNotAllowPhone" display-name-key="Do Not Allow Phone" description-key="Enable Phone feature based on consent" of-type="TwoOptions" usage="input" required="true" />
    <property name="doNotAllowSMS" display-name-key="Do Not Allow SMS" description-key="Enable SMS feature based on consent" of-type="TwoOptions" usage="input" required="false" />
    <!--Features-->
    <property name="placeholderText" display-name-key="Placeholder Text" description-key="Enable placeholder text for this column" of-type="SingleLine.Text" usage="input" required="false" />
    <property name="useFormatting" display-name-key="Use Formatting" description-key="Enable phone number formatting" of-type="TwoOptions" usage="input" required="true" />
    <resources>
      <code path="index.ts" order="1" />
      <platform-library name="React" version="16.14.0" />
    </resources>
  </control>
</manifest>